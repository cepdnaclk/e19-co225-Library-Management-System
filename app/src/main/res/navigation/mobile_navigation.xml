    <fragment
        android:id="@+id/requested_books"
        android:name="com.example.lmsapplication.ui.requestedBooks.RequestedBooksFragment"
        android:label="@string/title_requested_books"
        tools:layout="@layout/fragment_requested_books" />
    <fragment

        android:id="@+id/staff"
        android:name="com.example.lmsapplication.ui.staff.StaffFragment"
        android:label="@string/title_staff"
        tools:layout="@layout/fragment_staff" />
    <fragment

